<div id="<%= dom_id product %>">
  <div>
    <strong>Name:</strong>
    <%= product.name %>
  </div>

  <% if product.link.present? %>
    <div>
      <strong>Link:</strong>
      <%= link_to safe_url(product.link), safe_url(product.link), target: "_blank", rel: "noopener" %>
    </div>
  <% end %>

  <div>
    <strong>Price (USD):</strong>
    $<%= sprintf('%.2f', product.price_currency || 0) %>
  </div>

  <div>
    <strong>Cost (Credits):</strong>
    <% if product.cost_in_credits %>
      <%= sprintf('%.2f', product.cost_in_credits) %>
    <% else %>
      <em>Computed from price * credits-per-$</em>
    <% end %>
  </div>

  <% if product.variable_grant? %>
    <div>
      <strong>Variable grant:</strong>
      Yes — Allowed: $<%= sprintf('%.2f', product.grant_min_dollars) %> – $<%= sprintf('%.2f', product.grant_max_dollars) %>
      <% if product.credits_per_dollar %> (Ratio: <%= sprintf('%.2f', product.credits_per_dollar) %> credits / $)<% end %>
    </div>
  <% end %>

</div>
