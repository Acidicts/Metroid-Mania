<div class="admin-panel">
  <h1>Users</h1>
  <div class="admin-table-wrapper">
    <table class="admin-table">
      <thead>
        <tr>
          <th class="col-role col-shrink">Name</th>
          <th class="col-email">Email</th>
          <th class="col-slack-id col-shrink">Slack ID</th>
          <th class="col-id col-shrink">ID</th>
          <th class="col-role col-shrink">Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= link_to (u.name.presence || '(no name)'), edit_admin_user_path(u), title: "Edit #{u.email}" %></td>
            <td class="col-email"><%= u.email %></td>
            <td class="col-slack-id col-shrink"><%= u.slack_id.presence || '-' %></td>
            <td class="col-id col-shrink"><%= u.id %></td>
            <td class="col-role col-shrink">
              <% if u.superadmin? %>
                <strong>Superadmin</strong>
              <% else %>
                <%= u.role.humanize %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- admin-table-wrapper -->

    </div> <!-- admin-panel -->
  </main>
