<% content_for :title, "Projects" %>

<h1>Projects</h1>

<div id="projects">
  <div class="project-grid">
    <% @projects.each do |project| %>
      <%= render project, project: @project %>
    <% end %>
  </div>
</div>

<%= link_to "New project", new_project_path, style: "margin-top: 20px; display: inline-block;" %>
